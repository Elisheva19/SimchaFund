@model HistoryViewModel

<div class="container">
    <main role="main" class="pb-3" style="margin-top: 60px;">

        <div class="header">
            <h1>History for @Model.ContributorName</h1>
            <h3>Current Balance: @Model.Balance</h3>
        </div>

        <div class="row header">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Action</th>
                        <th>Date</th>
                        <th>Amount</th>
                    </tr>

                    @foreach(HistoryTrans ht in Model.Transactions)
            {
                <tr>
                    
                   @* <td>"@(ht.SimchaName=="Deposit" ? "Deposit" : "Contribution for)"</td>*@
                    @if(ht.SimchaName=="Deposit")
                {
                    <td>Deposit</td>
                }
                else
                {
                    <td>Contribution for @ht.SimchaName</td>
                }
                    <td>@ht.Date.ToShortDateString()</td>
                    <td>@ht.Amount.ToString("C")</td>
                </tr>

            }
                </table>
            </div>
        </div>

        <div style="text-align:center;">
            <a class="btn-lg btn-danger" href="/contributors/index">Back to Contributors</a>
        </div>
    </main>
</div>